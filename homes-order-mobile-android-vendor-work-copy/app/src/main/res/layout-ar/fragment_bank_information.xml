<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="bankInformationVM"
            type="com.homesordervendor.bankinformation.viewmodel.BankInformationVM"/>
        <variable
            name="bankInfoRequest"
            type="com.homesordervendor.bankinformation.model.BankInfoRequest"/>
    </data>

    <RelativeLayout
        android:onClick="@{bankInformationVM::onClickRootView}"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_alignParentTop="true"
            android:layout_above="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/font_color_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/account_information_entry_message"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/bank_info_account_holder_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextInputTheme"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true"
                    >
                    <EditText
                        android:onTextChanged="@{(text, start, before, count) -> bankInformationVM.onAccountHolderNameTextChanged(text, start, before, count,bankInfoRequest)}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/account_holder"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:gravity="right"
                        android:text="@={bankInfoRequest.account_holder_names}"
                        android:theme="@style/TextInputTheme"
                        android:textColor="@color/font_color_1"
                        android:backgroundTint="@color/font_color_3"/>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_settings"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/font_color_3"
                        android:text="@string/name_validation"/>
                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/bank_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextInputTheme"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true">
                    <EditText
                        android:onTextChanged="@{(text, start, before, count) -> bankInformationVM.onBankNameTextChanged(text, start, before, count,bankInfoRequest)}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/bank_name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:gravity="right"

                        android:text="@={bankInfoRequest.bank_names}"
                        android:theme="@style/TextInputTheme"
                        android:textColor="@color/font_color_1"
                        android:backgroundTint="@color/font_color_3"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/bank_info_account_number_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextInputTheme"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true">
                    <EditText
                        android:onTextChanged="@{(text, start, before, count) -> bankInformationVM.onAccountNumberTextChanged(text, start, before, count,bankInfoRequest)}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/account_number"
                        android:inputType="number"
                        android:maxLines="1"
                        android:gravity="right"

                        android:text="@={bankInfoRequest.account_numbers}"
                        android:theme="@style/TextInputTheme"
                        android:textColor="@color/font_color_1"
                        android:backgroundTint="@color/font_color_3"/>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_settings"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/font_color_3"
                        android:text="@string/information_masked"/>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/bank_info_iban_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextInputTheme"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true"
                    >
                    <EditText
                        android:onTextChanged="@{(text, start, before, count) -> bankInformationVM.onIBANTextChanged(text, start, before, count,bankInfoRequest)}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/iban"
                        android:inputType="number"
                        android:maxLines="1"
                        android:gravity="right"

                        android:text="@={bankInfoRequest.ibans}"
                        android:theme="@style/TextInputTheme"
                        android:textColor="@color/font_color_1"
                        android:backgroundTint="@color/font_color_3"/>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_settings"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/font_color_3"
                        android:text="@string/information_masked"/>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/business_licence_numbers_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextInputTheme"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true"
                    >
                    <EditText
                        android:onTextChanged="@{(text, start, before, count) -> bankInformationVM.onBusinessLicenceNumberTextChanged(text, start, before, count,bankInfoRequest)}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/business_licence_numbers"
                        android:inputType="number"
                        android:maxLines="1"
                        android:gravity="right"

                        android:text="@={bankInfoRequest.business_licence_numbers}"
                        android:theme="@style/TextInputTheme"
                        android:textColor="@color/font_color_1"
                        android:backgroundTint="@color/font_color_3"/>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_settings"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/font_color_3"
                        android:text="@string/information_masked"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <Button
            android:onClick="@{(v) -> bankInformationVM.onClickSave(v,bankInfoRequest)}"
            app:font="@{@string/san_francisco_text_medium}"
            android:id="@+id/save_btn"
            style="@style/ButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:text="@string/save" />
    </RelativeLayout>
</layout>